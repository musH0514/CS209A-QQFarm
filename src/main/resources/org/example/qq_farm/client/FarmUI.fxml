<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.qq_farm.client.ClientController"
            prefWidth="850" prefHeight="600">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <top>
        <HBox spacing="30" alignment="CENTER_LEFT" style="-fx-background-color: #f4f4f4; -fx-padding: 10; -fx-border-color: #cccccc; -fx-border-radius: 5;">
            <HBox spacing="5" alignment="CENTER">
                <Label text="Player:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <Label fx:id="nameLabel" text="Unknown" style="-fx-font-size: 14px;"/>
            </HBox>

            <HBox spacing="5" alignment="CENTER">
                <Label text="Money:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <Label fx:id="moneyLabel" text="0" style="-fx-text-fill: gold; -fx-font-weight: bold; -fx-font-size: 14px; -fx-effect: dropshadow(one-pass-box, black, 1, 0.0, 0, 0);"/>
            </HBox>

            <HBox spacing="5" alignment="CENTER">
                <Label text="Location:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <Label fx:id="locationLabel" text="My Farm" style="-fx-text-fill: blue; -fx-font-size: 14px;"/>
            </HBox>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            <Label text="Farm Land" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <GridPane fx:id="farmGrid" hgap="15" vgap="15" alignment="CENTER"
                      style="-fx-padding: 20; -fx-background-color: #e8f5e9; -fx-border-color: green; -fx-border-width: 2; -fx-border-radius: 10;">
            </GridPane>
        </VBox>
    </left>

    <right>
        <VBox spacing="15" prefWidth="250" style="-fx-padding: 10; -fx-background-color: #fafafa; -fx-border-color: #dddddd;">
            <Label text="Interaction Log" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TextArea fx:id="displayArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"
                      style="-fx-control-inner-background: #ffffff;"/>

            <Label text="Visit Friend" style="-fx-font-weight: bold;"/>

            <ComboBox fx:id="friendListSelector" promptText="Select or Enter Name..." editable="true" prefWidth="230"/>

            <HBox spacing="10">
                <Button text="Visit" onAction="#handleVisit" style="-fx-base: #87CEEB;" prefWidth="100"/>
                <Button text="Return Home" onAction="#handleReturnHome" style="-fx-base: #98FB98;" prefWidth="100"/>
            </HBox>
        </VBox>
    </right>

</BorderPane>